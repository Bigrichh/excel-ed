<style>
  .card {
    border-radius: 32px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow:
      -1px -1px 5px 0 rgba(0, 0, 0, 0.05),
      1px 1px 5px 0 rgba(0, 0, 0, 0.05);
  }

  .card h4.txt-dark {
    background: linear-gradient(180deg, #000 0%, #666 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .card-1 {
    background:
      url("../assets/svgs/texture.svg") repeat 0 0 / 100px 100px,
      linear-gradient(128deg, #d6dc20 3.27%, #b0b444 48.57%, #d6dc20 98.62%);
    background-blend-mode: overlay;
  }

  .card-2 {
