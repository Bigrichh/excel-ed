      url("../assets/svgs/texture.svg") repeat 0 0 / 100px 100px,
      linear-gradient(235deg, #99e369 1.94%, #66aa3b 50.61%, #99e369 97.04%);
    background-blend-mode: overlay;
  }

  .card-4 {
