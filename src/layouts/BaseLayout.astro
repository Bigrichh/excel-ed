---
import "../styles/global.css";

// Meta tags for seo data
const { pageTitle } = Astro.props;
const { pageDescription } = Astro.props;
const { ogURL } = Astro.props;
const { keywords } = Astro.props;

import NavBar from "../components/NavBar.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <!-- <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png?=v2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png?=v2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png?=v2"
    />
    <link rel="manifest" href="/favicon/site.webmanifest?=v2" /> -->

    <!-- Meta Tags For SEO -->
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Richmann Addai" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta
      property="og:image"
      content="https://design.richmnn.com/favicon/android-chrome-512x512.png?=v2"
    />
    <meta property="og:url" content={ogURL} />
    <meta property="og:type" content="website" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta
      name="twitter:image"
      content="https://design.richmnn.com/favicon/android-chrome-512x512.png?=v2"
    />
    <link rel="canonical" href="https://design.richmnn.com" />

    <!-- Rich Results / Structured Data for Personal Site -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Richmann Addai",
        "url": "https://design.richmnn.com",
        "image": "https://design.richmnn.com/favicon/android-chrome-512x512.png",
        "jobTitle": "Design Engineer",
        "sameAs": [
          "https://github.com/Bigrichh",
          "https://linkedin.com/in/richmnn"
        ]
      }
    </script>

    <!-- Google font import  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />

    <!-- Theme color for browser UI -->
    <meta name="theme-color" content="#000000" />

    <!-- Apple-specific settings -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <title>2025 Excel Ed Consult | {pageTitle}</title>
  </head>

  <body class="bg-bgprimary">
    <main class="flex flex-col w-full px-[24px] md:px-[48px]">
      <!-- NavBar -->
      <div class="w-full fixed top-0 left-0 z-50">
        <NavBar />
      </div>
      <slot />
    </main>
  </body>
</html>
